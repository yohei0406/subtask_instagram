<li>
  <span class="aligncenter size-full wp-image-425" data-toggle="modal" data-target="#image-modal" style="cursor:pointer">
    <%= image_tag imagepost.image.url if imagepost.image? %>
  </span>
  <div class="modal fade" id="image-modal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg modal-middle">
  	  <div class="modal-content">
        <div class="modal-body">
          <span class="aligncenter size-full wp-image-425">
            <%= image_tag imagepost.image.url if imagepost.image? %>
          </span>
        </div>
        <div class="modal-img_footer">
          <div class="comment_all">
          	<p>コメント一覧</p>
	        <% imagepost.comments.each do |comment| %>
	          <%= comment.comment_content %>
	        <% end %>
          </div>
          <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</li>
<h1>いいね機能</h1>
<% if current_user.alredy_favorited?(imagepost) %>
  <%= link_to imagepost_favorites_path(imagepost), method: :delete do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to imagepost_favorites_path(imagepost), method: :post do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>




<div class="modal fade" id="image-modal">
<div class="modal-dialog">

<div class="modal-body">
<img src="http://pilgrim-guild.com/wp-content/uploads/2016/11/baby-1151351_1920.jpg" alt="baby-1151351_1920" width="1920" height="1440" class="aligncenter size-full wp-image-425" />
</div>

</div>
</div>

<h1>コメントする</h1>
<%= form_with(model: [imagepost, @comment], method: :post ) do |f| %>
  <%= f.text_field :comment_content %>
  <%= f.hidden_field :imagepost_id, value: imagepost.id %>
  <%= f.submit "コメントする" %>
<% end %>